pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'pwd'
                dir('jamie/11Cron/01_DBConnect'){
                    sh 'pwd'
                    sh 'go build cronDBUpdate.go'
                }
            }
            post {
                success {
                    echo 'build 성공~'
                }
                failure {
                    echo 'build 실패...'
                }
            }
        }
        stage('Cron Execute') {
            steps {
                sh './cronDBUpdate.exe'
            }
            post {
                success {
                    echo '성공~'
                }
                failure {
                    echo '실패...'
                }
            }
        }
    }
}